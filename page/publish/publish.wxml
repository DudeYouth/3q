<view class="page-body">
  <form bindsubmit="formBindsubmit" >
  <view class="page-section">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">需求</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange="demandTypeChange" value="{{demandTypeIndex}}" range="{{demandType}}">
              <view class="weui-input">{{demandType[demandTypeIndex]}}</view>
            </picker>
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">年级</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange="gradeTypeChange" value="{{gradeTypeIndex}}" range="{{gradeType}}">
              <view class="weui-input">{{gradeType[gradeTypeIndex]}}</view>
            </picker>
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">科目</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange="SubjectTypeChange" value="{{SubjectTypeIndex}}" range="{{SubjectType}}">
              <view class="weui-input">{{SubjectType[SubjectTypeIndex]}}</view>
            </picker>
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">课酬</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange="priceTypeChange" value="{{priceTypeIndex}}" range="{{priceType}}">
              <view class="weui-input">{{priceType[priceTypeIndex]}}</view>
            </picker>
          </view>
        </view>
        <view class="weui-cell weui-cell_input" bindtap='areaChange'>
          <view class="weui-cell__hd">
            <view class="weui-label">区域</view>
          </view>
          <view class="weui-cell__bd">
            <view class="weui-input">{{provinces[areaSelect[0]].name}}-{{citys[areaSelect[1]].name}}-{{areas[areaSelect[2]]&&areas[areaSelect[2]].name}}</view>
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">地址</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name="address" type="text" placeholder="输入详细地址" value=""></input>
          </view>
        </view>
        <view class="weui-cell weui-cell_input" style="align-items:flex-start;">
          <view class="weui-cell__hd">
            <view class="weui-label more_demand_title">其他</view>
          </view>
          <view class="weui-cell__bd more_demand_cnt">
            <textarea name="note" placeholder="输入其他补充说明" auto-height="true" />
          </view>
        </view>

      </view>

  </view>
  <view class="page-section">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">微信</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="wechat" type="text" placeholder="输入你的微信号" value=""></input>
        </view>
        <view class="weui-cell__ft operate" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">
          复制手机号
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">手机</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="phone" type="text" disabled="{{true}}" placeholder="138****8888" value="18312168363"></input>
        </view>
      </view>
      <view class="weui-cell weui-cell_switch">
        <view class="weui-cell__bd">通过3Q家教联系我</view>
        <view class="weui-cell__ft">
          <switch name="show_contact" value="1" checked />
        </view>
      </view>
    </view>
    <view class="btn-area">
      <button type="primary" formType="submit" bindtap="toast1Tap">发布</button>
    </view>
  </view>
    </form>
  <view bindtap='closeModal' class="{{areaShow?'':'hide'}} areaModal">
    <view animation="{{animationData}}" catchtap="return false;" class="body" style="height:{{areaHeight}};">
      <view class="header">
        <text bindtap='closeModal'>取消</text>
        <text bindtap='confirm' style="float:right;color:#1AAD19">确定</text>
      </view>
      <picker-view style="height: 200px;padding:0 30px;box-sizing:border-box" bindchange="bindPickerChange" value="{{areaSelect}}">
        <picker-view-column>
          <view wx:for="{{provinces}}" style="line-height: 50px">{{item.name}}</view>
        </picker-view-column>
        <picker-view-column>
          <view wx:for="{{citys}}" style="line-height: 50px">{{item.name}}</view>
        </picker-view-column>
        <picker-view-column>
          <view wx:for="{{areas}}" style="line-height: 50px">{{item.name}}</view>
        </picker-view-column>
      </picker-view>
    </view>
  </view>
</view>