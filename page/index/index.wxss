.filter-tab{
	display: flex;
	width: 100%;
	line-height: 80rpx;
  border-top: 1rpx solid #ddd;
	border-bottom: 1rpx solid #ddd;
	position: relative;
	z-index: 2;
	background: #eee;
}
.filter-tab picker,.filter-tab picker-view {
	flex: 1;
	text-align: center;
}
.filter-tab view:after{
	content: '';
	display: inline-block;
	vertical-align: 4rpx;
	width: 0;
	height: 0;
	border-left: 12rpx solid transparent;
	border-right: 12rpx solid transparent;
	border-top: 12rpx solid #666;
	margin-left: 8rpx;
}
.filter-tab view.active{
	color: #3399FF;
}
.filter-tab:not(.sort-tab) view.active:after{
	border-top: 0;
	border-bottom: 12rpx solid #3399FF;
}
.filter-tab.sort-tab view.active:after{
	border-top: 12rpx solid #3399FF;
}
